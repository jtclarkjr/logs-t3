{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["bun-types", "bun-types/test"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "ignoreDeprecations": "5.0",
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "generated",
    "scripts/**",
    "src/components/ui/stories/**",
    "src/lib/utils/error-handler.ts",
    "src/lib/hooks/query/use-optimized-queries.ts",
    "src/lib/hooks/query/tests/**",
    "src/lib/hooks/state/tests/**",
    "src/lib/utils/tests/**"
  ]
}
